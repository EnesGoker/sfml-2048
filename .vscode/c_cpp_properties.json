{
  "configurations": [
    {
      "name": "macOS",
      "compilerPath": "/usr/bin/clang++",
      "cStandard": "c11",
      "cppStandard": "c++17",
      "intelliSenseMode": "macos-clang-x64",

      "includePath": [
        "${workspaceFolder}/**",
        "/opt/homebrew/include",     
        "/opt/homebrew/include/SFML"   
      ],

      "macFrameworkPath": [
        "/System/Library/Frameworks",
        "/Library/Frameworks"
      ],

      "browse": {
        "path": [
          "${workspaceFolder}",
          "/opt/homebrew/include",
          "/opt/homebrew/include/SFML"
        ],
        "limitSymbolsToIncludedHeaders": true
      }
    }
  ],
  "version": 4
}